<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="220dp"
        android:background="@null"
        android:letterSpacing="0.15"
        android:maxLength="8"
        android:text="rrr"
        android:textColor="@color/colorAccent"
        android:textSize="55sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="470dp">
        <!-- letterSpacing字符间距-->
        <EditText
            android:id="@+id/edt_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:letterSpacing="0.75"
            android:maxLength="5"
            android:numeric="integer"
            android:text="888888888888"
            android:textColor="@color/colorAccent"
            android:textSize="55sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="880dp"
        android:layout_marginTop="220dp">
        <!-- letterSpacing字符间距-->
        <EditText
            android:id="@+id/edt_fact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:letterSpacing="0.75"
            android:maxLength="5"
            android:numeric="integer"
            android:text="888888888888"
            android:textColor="@color/colorAccent"
            android:textSize="55sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginLeft="900dp"
        android:layout_marginTop="470dp">
        <!-- letterSpacing字符间距-->
        <TextView

            android:id="@+id/tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:letterSpacing="0.45"
            android:maxLength="6"
            android:text="80.2%"
            android:textColor="@color/colorAccent"
            android:textSize="55sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="55dp"
        android:layout_marginLeft="750dp"
        android:layout_marginTop="650dp">
        <!-- letterSpacing字符间距-->
        <EditText
            android:id="@+id/edt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:letterSpacing="0.05"
            android:text="2020年07月03日  星期五 15时53分55秒 "
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />
    </LinearLayout>


</RelativeLayout>